@model IEnumerable<GoAber.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@(Resources.Resources.AdminTeamsController_Index_Title)</h2>

<p>
    @Html.ActionLink(Resources.Resources.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.communityId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.community.name)
        </td>
        <td>
            @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.Partial("_Pager", Model)