@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

<div class="jumbotron">
    <h1>Welcome to GoAber!</h1>
    <p>The place were you can aim to be the best version of yourself.</p>
</div>

@helper selected(string c, string culture)
{
if (c == culture)
{
        @:checked="checked"
    }
}



<div class="row">
    <div class="col-md-4">
        <h2>Register to begin</h2>
        <p>
            We promise we won't sell your details to anyone!
        </p>
    </div>
    <div class="col-md-4">
        <h2>Hook up your devices</h2>
        <p>We support Jawbone and Fitbit!</p>
    </div>
    <div class="col-md-4">
        <h2>Challenge other communities</h2>
        <p>Is your community the fittest?</p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });

        })(jQuery);
    </script>
}